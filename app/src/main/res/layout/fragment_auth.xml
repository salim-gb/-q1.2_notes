<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@color/blueAccent_700"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/sing_in_please"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        app:buttonSize="wide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/vk_sign_in_btn"
        android:layout_width="wrap_content"
        android:text="@string/sign_in_with_vk"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center"
        android:textColor="@color/blueAccent_700"
        android:fontFamily="@font/roboto_bold"
        app:iconGravity="start"
        android:paddingHorizontal="@dimen/horizontal_padding_36"
        android:textSize="@dimen/medium_text_size"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:backgroundTint="@color/white"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>